<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/id_user_image_shits"
                android:layout_weight="1"
                android:src="@drawable/battlefield"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/id_username_shits"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="New Text"
                    android:id="@+id/id_datetime_shits"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView8"
                android:layout_weight="1"
                android:src="@drawable/vent"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="100"
                android:id="@+id/id_praise_shits"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="JKBJKAFKJBFAJKBASKFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFAJSFBKJFBSFJBJKBJKFDSBJKBDSJFKBDSKJBFDJDSBSJJDSBFJKBDSFKJBDSFKJBFDSJKBFDJKDSBDSKJBDSJKDBSFJKDSBKSDDSJKBDSJKBDSJKBDSJKDSBJDKSBDSKFSDFAKGEIUGFJKBJFGIAHAFKHFUYFERGFIHALKNFJBFKUAGUKFAHFAGWYFGUIWGFKJHAFGUFGUGWUGWGFFJka"
        android:id="@+id/id_shits_content"
        android:maxLines="3"
        android:textSize="@dimen/text_size"
        android:padding="10dp"
        android:ellipsize="end" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_image_shits1"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_image_shits2"
            android:adjustViewBounds="true"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_image_shits3"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

</LinearLayout>
